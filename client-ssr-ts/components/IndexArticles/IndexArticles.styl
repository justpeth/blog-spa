@import '../../assets/styles/variables.styl'

.index-articles
  text-align center
.index-article
  text-align center
  &-title
    margin-bottom $spacer-1
  &-summary
    text-align left
  &-link
    position relative
    display inline-block
    vertical-align top
    color $gray
    line-height 2
    cursor pointer
    &::before
      content ""
      position absolute
      width 100%
      height 2px
      bottom: 0
      left 0
      background-color $gray-dark;
      visibility hidden
      transform scaleX(0)
      transition-duration 0.2s
      transition-timing-function ease-in-out
      transition-delay 0s
    &:hover
      color $gray-dark
      &::before
        visibility visible
        transform scaleX(1)
  &-meta
    margin-bottom $spacer-6
    font-size $font-size-small
    color $gray-light
    line-height 24px
    .iconfont
      font-size $font-size-small
      margin-right $spacer-2
    &-line
      margin 0 $spacer-2;
  &-tag + &-tag
    margin-left $spacer-2
  &::after
    content ""
    display block
    margin 40px auto 50px
    width 16%
    height 1px
    background $border-color
    text-align center